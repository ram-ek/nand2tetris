/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    // Put your code here:
    Inc16(in=outprev, out=incout);
    Mux8Way16(a=outprev, b=false, c=in, d=false, e=incout, f=false, g=in, h=false, sel[0]=reset, sel[1]=load, sel[2]=inc, out=outmux);
    Register(in=outmux, load=true, out=out, out=outprev);

}
