/**
 * Memory of 4K registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then 
 * the in value is loaded into the memory location specified by address 
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM4K {
    IN in[16], load, address[12];
    OUT out[16];

    PARTS:
    // Put your code here:
    DMux8Way(in=load, sel=address[0..2], a=dmuxout0, b=dmuxout1, c=dmuxout2, d=dmuxout3, e=dmuxout4, f=dmuxout5, g=dmuxout6, h=dmuxout7);

    RAM512(in=in, load=dmuxout0, address=address[3..11], out=out0);
    RAM512(in=in, load=dmuxout1, address=address[3..11], out=out1);
    RAM512(in=in, load=dmuxout2, address=address[3..11], out=out2);
    RAM512(in=in, load=dmuxout3, address=address[3..11], out=out3);
    RAM512(in=in, load=dmuxout4, address=address[3..11], out=out4);
    RAM512(in=in, load=dmuxout5, address=address[3..11], out=out5);
    RAM512(in=in, load=dmuxout6, address=address[3..11], out=out6);
    RAM512(in=in, load=dmuxout7, address=address[3..11], out=out7);

    Mux8Way16(a=out0, b=out1, c=out2, d=out3, e=out4, f=out5, g=out6, h=out7, sel=address[0..2], out=out);
}